generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  name         String?
  username     String?  @unique
  email        String?  @unique
  image        String?
  coverImage   String?
  profileImage String?
  hashedPassword String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  elements Element[]
}

model Element {
  id          String  @id @default(cuid())
  name        String?
  typeElement String
  isFavourite Boolean
  urlWebsite  String?
  username    String?
  password    String?
  notes       String?
  userId      String
  directory   String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
